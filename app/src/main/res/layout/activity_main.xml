<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.MainActivity">

   <androidx.viewpager.widget.ViewPager
       android:id="@+id/home_viwepager"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"></androidx.viewpager.widget.ViewPager>

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:background="@color/colorAccent"
    android:id="@+id/home_navigatio"
    app:itemTextColor="#000000"
    app:labelVisibilityMode="labeled"
    app:menu="@menu/home_navigatior_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>